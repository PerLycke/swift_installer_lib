<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/failed_info_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/failed_info_card_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/big_tile_bg" />

    <ImageView
        android:id="@+id/failed_info_card_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/image"
        android:padding="8dp"
        android:tint="@color/minimal_red"
        app:layout_constraintBottom_toBottomOf="@+id/failed_info_card_layout"
        app:layout_constraintEnd_toEndOf="@+id/failed_info_card_layout"
        app:layout_constraintTop_toTopOf="@+id/failed_info_card_layout"
        app:srcCompat="@drawable/ic_close" />

    <TextView
        android:id="@+id/failed_info_card_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:text="@string/info_card_failed_msg"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/failed_info_card_layout"
        app:layout_constraintEnd_toStartOf="@+id/failed_info_card_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/failed_info_card_layout" />

</android.support.constraint.ConstraintLayout>