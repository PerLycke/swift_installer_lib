<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/appItemName"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="App Name"
        tools:textColor="@android:color/white" />

    <!--    <CheckBox
            android:id="@+id/appItemCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:buttonTint="#dedede"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="@+id/appItemName"
            app:layout_constraintEnd_toEndOf="@+id/appItemName"
            app:layout_constraintTop_toTopOf="@+id/appItemName" />-->

    <ImageView
        android:id="@+id/appItemImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/appItemName"
        app:layout_constraintEnd_toStartOf="@+id/appItemName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appItemName" />

    <CheckBox
        android:id="@+id/appItemCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:buttonTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/appItemName"
        app:layout_constraintEnd_toEndOf="@+id/appItemName"
        app:layout_constraintTop_toTopOf="@+id/appItemName" />

</android.support.constraint.ConstraintLayout>