<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/card_reboot_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/big_tile_bg" />

    <ImageView
        android:id="@+id/card_reboot_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/image"
        android:padding="8dp"
        android:tint="@color/minimal_orange"
        app:layout_constraintBottom_toBottomOf="@+id/card_reboot_bg"
        app:layout_constraintEnd_toEndOf="@+id/card_reboot_bg"
        app:layout_constraintTop_toTopOf="@+id/card_reboot_bg"
        app:srcCompat="@drawable/ic_reboot" />

    <TextView
        android:id="@+id/card_reboot_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:text="@string/info_card_reboot_msg"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/card_reboot_bg"
        app:layout_constraintEnd_toStartOf="@+id/card_reboot_icon"
        app:layout_constraintStart_toStartOf="@+id/card_reboot_bg"
        app:layout_constraintTop_toTopOf="@+id/card_reboot_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>