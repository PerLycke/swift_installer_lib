<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/errorTile"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/big_tile_bg" />

    <ImageView
        android:id="@+id/errorIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/errorTile"
        app:layout_constraintStart_toStartOf="@+id/errorTile"
        app:layout_constraintTop_toTopOf="@+id/errorTile"
        app:srcCompat="@drawable/ic_error" />

    <TextView
        android:id="@+id/errorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/main_error_title"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/errorDesc"
        app:layout_constraintStart_toEndOf="@+id/errorIcon"
        app:layout_constraintTop_toTopOf="@+id/errorTile"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/errorDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:text="@string/main_error_desc"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/errorTile"
        app:layout_constraintEnd_toEndOf="@+id/errorTile"
        app:layout_constraintStart_toEndOf="@+id/errorIcon"
        app:layout_constraintTop_toBottomOf="@+id/errorTitle" />

</android.support.constraint.ConstraintLayout>