        app:layout_constraintEnd_toStartOf="@+id/palette2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_palette_green" />

    <ImageView
        android:id="@+id/palette2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/palette1"
        app:layout_constraintEnd_toStartOf="@+id/palette3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/palette1"
        app:layout_constraintTop_toTopOf="@+id/palette1"
        app:srcCompat="@drawable/ic_palette_blue" />

    <ImageView
        android:id="@+id/palette3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
