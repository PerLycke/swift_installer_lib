    <ImageView
        android:id="@+id/palette4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/palette3"
        app:layout_constraintEnd_toStartOf="@+id/palette5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/palette3"
        app:layout_constraintTop_toTopOf="@+id/palette3"
        app:srcCompat="@drawable/ic_palette_red" />

    <ImageView
        android:id="@+id/palette5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/palette4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/palette4"
        app:layout_constraintTop_toTopOf="@+id/palette4"
        app:srcCompat="@drawable/ic_palette_tangerine" />

    <ImageView
        android:id="@+id/palette6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/palette7"
        app:layout_constraintEnd_toStartOf="@+id/palette7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/palette7"
        app:srcCompat="@drawable/ic_palette_tangerine" />

    <ImageView
        android:id="@+id/palette7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/palette8"
        app:layout_constraintEnd_toStartOf="@+id/palette8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/palette6"
        app:layout_constraintTop_toTopOf="@+id/palette8"
        app:srcCompat="@drawable/ic_palette_red" />

    <ImageView
        android:id="@+id/palette8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/palette9"
        app:layout_constraintEnd_toStartOf="@+id/palette9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/palette7"
