<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--<stroke android:width="4.0px" android:color="@color/stroke_red" />-->
            <solid android:color="@color/small_info_pressed_tint" />
            <corners android:radius="4dp" />
            <stroke android:width="1.0px" android:color="#808080" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!--<stroke android:width="4.0px" android:color="@color/stroke_red" />-->
            <solid android:color="@color/small_info_tint" />
            <corners android:radius="4dp" />
            <stroke android:width="1.0px" android:color="#808080" />
        </shape>
    </item>
</selector>