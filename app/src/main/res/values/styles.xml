<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_main</item>
        <item name="android:colorBackgroundFloating">@color/background_main</item>
        <item name="android:windowBackground">@color/background_main</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuOverflow</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:checkboxStyle">@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox</item>
    </style>
    <style name="AppTheme.Black" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorBackgroundFloating">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuOverflow</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:checkboxStyle">@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox</item>
    </style>
    <style name="AppAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:colorAccent">@color/minimal_green</item>
    </style>
    <style name="AppAlertDialogTheme.Black" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg_black</item>
        <item name="android:colorAccent">@color/minimal_green</item>
    </style>
    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17.0dip</item>
        <item name="android:textColor">#d9ffffff</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ToolbarSubtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">#d9ffffff</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="PopupMenuOverflow" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_bg</item>
        <item name="android:dropDownHorizontalOffset">0.0dip</item>
        <item name="android:dropDownVerticalOffset">8.0dip</item>
        <item name="android:popupElevation">2.0dip</item>
        <item name="android:dropDownWidth">24dp</item>
    </style>
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CustomBottomSheetDialogTheme.Black" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle.Black</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/background_main</item>
    </style>
    <style name="CustomBottomSheetStyle.Black" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/black</item>
    </style>
</resources>
