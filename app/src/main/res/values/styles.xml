<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background_main</item>
        <item name="android:colorBackground">@color/background_main</item>
        <item name="android:colorBackgroundFloating">#1b1b21</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:checkboxStyle">@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox</item>
        <item name="android:colorControlHighlight">@color/ripple</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackgroundFloating">#1b1b21</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuOverflow</item>
    </style>
    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:colorAccent">@color/minimal_green</item>
        <item name="android:windowTitleStyle">@style/AppTheme.AlertDialog.Title</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="buttonBarStyle">@style/AppTheme.AlertDialog.ButtonBar</item>
        <item name="android:buttonBarStyle">@style/AppTheme.AlertDialog.ButtonBar</item>
    </style>
    <style name="AppTheme.AlertDialog.Error" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:colorAccent">@color/minimal_green</item>
        <item name="android:windowTitleStyle">@style/AppTheme.AlertDialog.Title</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    <style name="AppTheme.AlertDialog.ButtonBar" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">-4dp</item>
    </style>
    <style name="AppTheme.AlertDialog.Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="AppTheme.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TutorialStyle" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal" />

    <style name="PopupMenuOverflow" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_bg</item>
        <item name="android:dropDownHorizontalOffset">0.0dip</item>
        <item name="android:dropDownVerticalOffset">8.0dip</item>
        <item name="android:popupElevation">2.0dip</item>
        <item name="android:dropDownWidth">24dp</item>
    </style>
    <style name="PopupWindow" parent="Widget.AppCompat.PopupWindow">
        <item name="android:popupBackground">@drawable/popup_bg</item>
        <item name="android:windowEnterAnimation">@anim/popup_open</item>
        <item name="android:windowExitAnimation">@anim/popup_open</item>
    </style>
    <style name="PopupWindowAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/popup_open</item>
        <item name="android:windowExitAnimation">@anim/popup_close</item>
    </style>
    <style name="ToolbarSubtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">#d9ffffff</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17.0dip</item>
        <item name="android:textColor">#d9ffffff</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.AppCompat.Button.Borderless.Colored" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="dialogNoTitle" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/background_main</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>
</resources>
