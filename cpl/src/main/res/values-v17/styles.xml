<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogButton" parent="android:TextAppearance.DeviceDefault.Widget.Button">
        <item name="android:textColor">?android:colorForeground</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ARGBEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/common_margin</item>
        <item name="android:layout_marginEnd">@dimen/hex_margin</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">number</item>
        <item name="android:max">255</item>
        <item name="android:maxLength">3</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
