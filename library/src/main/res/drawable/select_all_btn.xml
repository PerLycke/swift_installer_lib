<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="?android:selectableItemBackgroundBorderless" />
    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:drawable="@drawable/ic_select_all_disabled"
                android:state_enabled="false" />
            <item
                android:drawable="@drawable/ic_select_all_checked"
                android:state_checked="true" />
            <item
                android:drawable="@drawable/ic_select_all_unchecked"
                android:state_checked="false" />
        </selector>
    </item>
</layer-list>
