<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/background_main</item>
        <item name="android:colorBackground">@color/background_main</item>
        <item name="android:colorBackgroundFloating">#1b1b21</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:checkboxStyle">
            @android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox
        </item>
        <item name="android:colorControlHighlight">@color/ripple</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackgroundFloating">#1b1b21</item>
    </style>

    <style name="AppTheme.Settings" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/background_main</item>
        <item name="android:colorBackground">@color/background_main</item>
        <item name="android:colorBackgroundFloating">#1b1b21</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:checkboxStyle">
            @android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox
        </item>
        <item name="android:colorControlHighlight">@color/ripple</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackgroundFloating">#1b1b21</item>
    </style>

    <style name="AppTheme.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/reboot_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WindowTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:colorAccent">@color/minimal_green</item>
        <item name="android:windowTitleStyle">@style/AppTheme.AlertDialog.Title</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="buttonBarStyle">@style/AppTheme.AlertDialog.ButtonBar</item>
        <item name="android:buttonBarStyle">@style/AppTheme.AlertDialog.ButtonBar</item>
    </style>

    <style name="AppTheme.AlertDialog.Reboot" parent="AppTheme.AlertDialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AlertDialog.Error" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:colorAccent">@color/minimal_green</item>
        <item name="android:windowTitleStyle">@style/AppTheme.AlertDialog.Title</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="AppTheme.AlertDialog.ButtonBar" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">-4dp</item>
        <item name="android:minHeight">74dp</item>
    </style>

    <style name="AppTheme.AlertDialog.Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TutorialStyle" parent="AppTheme" tools:keep="@style/AppTheme_TutorialStyle">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal" />

    <style name="PopupWindow" parent="Widget.AppCompat.PopupWindow">
        <item name="android:popupBackground">@null</item>
    </style>

    <style name="PopupWindowAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/popup_open</item>
        <item name="android:windowExitAnimation">@anim/popup_close</item>
    </style>

    <style name="ToolbarSubtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#d9ffffff</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#d9ffffff</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.AppCompat.Button.Borderless.Colored" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
